/* =====================================================
   Core Theme
   ===================================================== */
:root {
    --bg: #0b0b0f;
    --ink: #ffffff;
    --muted: rgba(255, 255, 255, 0.65);
    --forge-green: #8bffb3;
    --forge-green-dim: rgba(139, 255, 179, 0.18);
}

/* =====================================================
   Global Reset
   ===================================================== */
* {
    box-sizing: border-box;
}

html,
body {
    margin: 0;
    padding: 0;
    background: var(--bg);
    color: var(--ink);
    font-family: "Inter", ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    text-align: center;
}

/* =====================================================
   Layout
   ===================================================== */
.wrap {
    max-width: 1100px;
    margin: 0 auto;
    padding: 32px 18px 64px;
}

/* =====================================================
   Hero
   ===================================================== */
.hero {
    margin-bottom: 48px;
}

.hero-title {
    font-size: clamp(2.4rem, 5vw, 4rem);
    font-weight: 800;
    margin-bottom: 10px;
}

.hero-subtitle {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--muted);
}

/* =====================================================
   Metric Section
   ===================================================== */
.metric-group {
    margin-top: 10px;
}

.metric-number {
    font-size: clamp(4rem, 12vw, 10rem);
    font-weight: 800;
    color: var(--forge-green);
    text-shadow: 0 0 28px rgba(139, 255, 179, 0.4);
    white-space: nowrap;
    min-height: 1.1em;
}

.metric-number .unit {
    font-size: 0.45em;
    margin-left: 0.15em;
}

.metric-group h3 {
    font-size: 1.05rem;
    font-weight: 500;
    color: var(--muted);
    max-width: 720px;
    margin: 20px auto 0;
}

/* =====================================================
   Primary Action Button
   ===================================================== */
.btn {
    margin-top: 26px;

    padding: 20px 44px;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 0.02em;

    color: #ffffff;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 999px;

    cursor: pointer;
    outline: none;

    box-shadow: 0 0 18px rgba(120, 255, 180, 0.15);

    transition:
        transform 0.15s ease,
        box-shadow 0.15s ease,
        background 0.15s ease,
        opacity 0.15s ease;

    animation: glowPulse 3.5s ease-in-out infinite;
}

.btn:hover {
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 0 32px rgba(120, 255, 180, 0.35);
}

.btn:active {
    transform: translateY(0);
    box-shadow: 0 0 18px rgba(120, 255, 180, 0.25);
}

.btn.measuring {
    animation: none;
    opacity: 0.85;
    cursor: default;
    box-shadow: 0 0 40px rgba(120, 255, 180, 0.45);
}

@keyframes glowPulse {
    0% {
        box-shadow: 0 0 18px rgba(120, 255, 180, 0.12);
    }

    50% {
        box-shadow: 0 0 28px rgba(120, 255, 180, 0.28);
    }

    100% {
        box-shadow: 0 0 18px rgba(120, 255, 180, 0.12);
    }
}

/* =====================================================
   Horizontal Rule
   ===================================================== */
.forge-rule {
    height: 1px;
    width: min(980px, 92vw);
    margin: 28px auto 36px;
    position: relative;

    background: linear-gradient(90deg,
            transparent,
            rgba(139, 255, 179, 0.25),
            rgba(139, 255, 179, 0.75),
            rgba(139, 255, 179, 0.25),
            transparent);
}

.forge-rule::before {
    content: "";
    position: absolute;
    inset: -10px 0;
    background: radial-gradient(circle, rgba(139, 255, 179, 0.22), transparent 55%);
    filter: blur(6px);
}

/* =====================================================
   Forge Tweaks Section
   ===================================================== */
.forge-tweaks {
    margin: 64px auto 48px;
}

.forge-tweaks-title {
    font-size: 2.4rem;
    font-weight: 700;
    margin: 0 0 8px;
}

.forge-tweaks-subtitle {
    font-size: 0.95rem;
    color: var(--muted);
    margin-bottom: 50px;
}

.forge-tweaks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 22px;
}

.forge-tweak {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(139, 255, 179, 0.15);
    border-radius: 16px;
    padding: 22px 20px 26px;
    text-align: left;

    transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.forge-tweak:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 28px rgba(139, 255, 179, 0.18);
}

.forge-num {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--forge-green);
    letter-spacing: 0.12em;
    margin-bottom: 8px;
    display: block;
}

.forge-tweak h3 {
    font-size: 1.05rem;
    margin-bottom: 6px;
}

.forge-tweak p {
    font-size: 0.9rem;
    color: var(--muted);
    line-height: 1.4;
}

/* =====================================================
   Footer
   ===================================================== */
.foot {
    font-size: 1rem;
    color: var(--muted);
    margin-top: 40px;
}

.foot a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
}

.foot a:hover {
    text-decoration: underline;
}

button {
    transition:
        transform 0.08s ease,
        box-shadow 0.08s ease,
        filter 0.08s ease;
}

/* Hover = alert but calm */
button:hover {
    filter: brightness(1.05);
}

/* Active = pressed */
button:active {
    transform: translateY(1px);
    filter: brightness(0.95);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25) inset;
}